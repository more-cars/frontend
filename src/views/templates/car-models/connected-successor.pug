if successor
    section(aria-label="car-model-successor")
        h2(class="text-2xl mb-4 text-center") Successor

        div(class="mb-4 bg-stone-100 rounded-md inset-shadow-sm" data-testid=`car-model-${item.id}`)
            div(class="grid grid-flow-col grid-cols-4 gap-4" data-testid=`car-model-successor-${successor.id}`)
                include ../nodes/thumbnail
                div(class="col-span-3")
                    a(class="inline-block font-bold text-xl mt-3 underline" href=`/car-models/${successor.id}`)
                        span(aria-label="name") #{successor.name}
                    - item = successor
                    - primaryProperties = relationships.successor.primary_properties
                    include ../nodes/primary-properties
