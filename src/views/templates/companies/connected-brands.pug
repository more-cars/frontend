if brands.length > 0
    section
        h2(class="text-2xl mb-4 text-center") Brands
            span  (#{brands.length})

        ul(
            class="m-auto"
            aria-label="List of all Brands that are attached to the Company"
            data-testid="brands-list"
        )
            each item in brands
                li(class="mb-4 bg-stone-100 rounded-md inset-shadow-sm" data-testid=`brand-${item.id}`)
                    div(class="grid grid-flow-col grid-cols-4 gap-4")
                        include ../nodes/thumbnail
                        div(class="col-span-3")
                            a(class="inline-block font-bold text-xl mt-3 underline" href=`/brands/${item.id}`)
                                span(aria-label="name") #{item.name}
                            if item.internal_code
                                span(aria-label="internal code")  (#{item.internal_code})
                            - primaryProperties = relationships.brands.primary_properties
                            include ../nodes/primary-properties
