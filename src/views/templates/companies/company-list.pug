if nodeCollection.length === 0
    div(
        class="max-w-160 m-auto p-4 bg-orange-100 border-l-4 border-orange-500 text-orange-700"
        data-testid="company-list-empty"
    )
        p(class="font-bold") No companies
        p No companies were found. Either there are none or this is a temporary issue. Please try again later.
else
    section(data-testid="company-section")
        ul(class="grid sm:grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4 max-w-400 m-auto")
            each item in nodeCollection
                include company-list-item

    include ../nodes/pagination
    +pagination('companies', pagination.page, pagination.total)
