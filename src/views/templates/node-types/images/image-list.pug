if node_collection.length === 0
    div(
        class="max-w-160 m-auto p-4 bg-orange-100 border-l-4 border-orange-500 text-orange-700"
        data-testid="image-list-empty"
    )
        p(class="font-bold") No Images
        p No images were found. Either there are none or this is a temporary issue. Please try again later.
else
    section(data-testid="image-section")
        ul(class="grid lg:grid-cols-2 gap-x-8 gap-y-2")
            each item in node_collection
                - nodeProperties = node_properties
                include image-list-item

    include ../../nodes/pagination
    +pagination('images', pagination.page, pagination.total)
