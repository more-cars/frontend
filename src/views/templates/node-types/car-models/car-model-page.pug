extends ../../../layouts/base/layout

block main
    - carModel = node.data
    div(class="grid grid-cols-2 gap-8 items-start")
        div(data-testid="main-area-primary")
            h1(class=`text-left mb-1 text-3xl font-bold`) #{carModel.name}
            div(class="mb-4 text-sm") #{carModel.built_from}-#{carModel.built_to} | #{carModel.generation}th generation (#{carModel.internal_code})

            - mainImage = node.main_image
            include ../../nodes/connected-main-image

            - item = carModel
            include ../../nodes/fact-sheet
        div(data-testid="main-area-secondary")
            - brand = relationships.brand.item
            include connected-brand

            - predecessor = relationships.predecessor.item
            include connected-predecessor

            - successor = relationships.successor.item
            include connected-successor

            - images = relationships.images.items
            - nodeProperties = relationships.images.node_properties
            include ../../nodes/connected-images-section

block footer
    p Footer area...
