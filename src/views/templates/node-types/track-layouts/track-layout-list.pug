if node_collection.length === 0
    div(
        class="max-w-160 m-auto p-4 bg-orange-100 border-l-4 border-orange-500 text-orange-700"
        data-testid="track-layout-list-empty"
    )
        p(class="font-bold") No track layouts
        p No track layouts were found. Either there are none or this is a temporary issue. Please try again later.
else
    section(data-testid="track-layout-section")
        ul(class="grid lg:grid-cols-2 gap-x-8 gap-y-2")
            each nodeItem in node_collection
                - nodeType = 'track-layout'
                - nodeUrlPath = 'track-layouts/' + nodeItem.id
                - nodeProperties = node_properties
                include ../../shared/list-node-item

    include ../../shared/pagination
    +pagination('track-layouts', pagination.page, pagination.total)
