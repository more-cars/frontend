li(class="mb-4 bg-stone-100 rounded-md inset-shadow-sm" data-testid=`image-${item.id}`)
    div(class="grid grid-flow-col grid-cols-4 gap-4")
        - thumbnail = item
        include ../nodes/thumbnail
        div(class="col-span-3")
            a(class="inline-block font-bold text-lg my-2 underline hover:no-underline" href=`/images/${item.id}`)
                span(aria-label="name") #{item.name}
            include ../nodes/primary-properties
