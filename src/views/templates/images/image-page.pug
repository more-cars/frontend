extends ../../layouts/base/layout

block main
    - image = node.data
    div(class="grid grid-cols-2 gap-8 items-start")
        div
            h1(class=`text-left mb-1 text-3xl font-bold`) #{image.name}
            div(class="mb-4 text-sm") #{image.license} | #{image.creator} | via #{image.image_provider}

            - mainImage = node.main_image
            include ../nodes/connected-main-image

            - item = image
            include ../nodes/fact-sheet
        div
            - brands = relationships.brands.items
            include connected-brands

            - carModels = relationships.car_models.items
            include connected-car-models

block footer
    p Footer area...
