extends ../../layouts/base/layout

block main
    h1(
        aria-label="image name"
        class=`text-center
        mb-8
        text-3xl
        font-bold`) #{node.data.name}
    div(class="grid grid-cols-2 gap-4 items-start")
        div
            include ../nodes/fact-sheet
        div
            include image
            include connected-brands
            include connected-car-models

block footer
    p Footer area...

block debug
    div(class="absolute bottom-0 right-0 p-4 border-2 border-purple-200 text-purple-600")
        p Image ##{node.id} loaded
        p #{brands.length} connected Brand(s) loaded
        p #{carModels.length} connected Car Model(s) loaded
