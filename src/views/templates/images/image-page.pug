extends ../../layouts/base/layout

block main
    - image = node.data
    h1(
        aria-label="image name"
        class=`text-center
        mb-8
        text-3xl
        font-bold`) #{image.name}
    div(class="grid grid-cols-2 gap-4 items-start")
        div
            - item = image
            include ../nodes/fact-sheet
        div
            - mainImage = node.main_image
            include ../nodes/connected-main-image

            - brands = relationships.brands.items
            include connected-brands

            - carModels = relationships.car_models.items
            include connected-car-models

block footer
    p Footer area...
