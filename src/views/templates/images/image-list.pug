if nodeCollection.length === 0
    div(
        class="max-w-160 m-auto p-4 bg-orange-100 border-l-4 border-orange-500 text-orange-700"
        data-testid="image-list-empty"
    )
        p(class="font-bold") No Images
        p No images were found. Either there are none or this is a temporary issue. Please try again later.
else
    ul(
        class="grid sm:grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4 max-w-400 m-auto"
        aria-label="List of all Images"
        data-testid="image-list"
    )
        each item in nodeCollection
            li(aria-label="brand" class="mb-4 bg-stone-100 rounded-md inset-shadow-sm")
                div(class="grid grid-flow-col grid-cols-4 gap-4")
                    div(class="col-span-1 p-4 border-2 bg-orange-50")
                        div(class="aspect-16/9") IMG
                    div(class="col-span-3")
                        a(class="inline-block font-bold text-xl mt-3 underline" href=`/images/${item.id}`)
                            span(aria-label="name") #{item.name}
                        ul
                            li(aria-label="founded" class="mt-4") Creator: #{item.creator}
                            li(aria-label="founded" class="") Image Provider: #{item.image_provider}
                            li(aria-label="founded" class="") License: #{item.license}
