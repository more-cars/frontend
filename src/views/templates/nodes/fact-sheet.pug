section(data-testid="fact-sheet")
    h2(class="text-2xl mb-4 font-bold") Fact Sheet
    table(class="w-full rounded-lg border-separate border-spacing-1.5 bg-zinc-200")
        tbody
            each propertyValue, propertyName in item
                - const nodeProperty = node.node_properties.find(prop => prop.name === propertyName)
                - const propertyLabel = nodeProperty ? nodeProperty.label : propertyName
                tr(data-testid=`${propertyName}`)
                    td(class="p-2 font-bold text-right text-zinc-600") #{propertyLabel}
                    td(class="p-2 rounded-md border text-zinc-700 border-zinc-300 bg-zinc-50") #{propertyValue}
