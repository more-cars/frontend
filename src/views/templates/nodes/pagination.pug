mixin pagination(nodeType, currentPage, totalAmount)
    if totalAmount > 100
        div(
            class="columns-3 text-center max-w-400 m-auto"
            aria-label="pagination"
        )
            a(
                aria-label="previous page"
                class="block p-2 border-2 border-zinc-800 rounded-l-lg bg-zinc-100 hover:bg-zinc-400 disabled"
                href=`/${nodeType}${currentPage > 2 ? '?page=' + (currentPage - 1) : ''}`
            ) previous page
            a(
                aria-label="this page"
                class="block p-2 border-2 border-zinc-800 bg-zinc-100 hover:bg-zinc-400"
                href=`/${nodeType}${currentPage > 1 ? '?page=' + (currentPage) : ''}`
            ) page 2
            a(
                aria-label="next page"
                class="block p-2 border-2 border-zinc-800 rounded-r-lg bg-zinc-100 hover:bg-zinc-400"
                href=`/${nodeType}?page=${currentPage + 1}`
            ) next page
