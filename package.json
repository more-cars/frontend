{
  "author": "Dennis Gerike",
  "dependencies": {
    "@tailwindcss/cli": "4.1.8",
    "@types/express": "5.0.3",
    "axios": "1.9.0",
    "express": "5.1.0",
    "pug": "3.0.3",
    "tailwindcss": "4.1.8",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "description": "Frontend for the open car database 'More Cars'",
  "devDependencies": {
    "@axe-core/playwright": "4.10.2",
    "@cucumber/cucumber": "11.2.0",
    "@eslint/js": "9.26.0",
    "@playwright/test": "1.52.0",
    "@types/jest": "29.5.14",
    "@types/k6": "1.0.2",
    "@types/supertest": "6.0.3",
    "jest-junit": "16.0.0",
    "jest": "29.7.0",
    "nodemon": "3.1.10",
    "playwright-bdd": "8.2.1",
    "supertest": "7.1.3",
    "ts-jest": "29.4.0",
    "typescript-eslint": "8.32.0"
  },
  "engines": {
    "node": ">=23.6.0"
  },
  "license": "MIT",
  "name": "@more-cars/frontend",
  "repository": "https://github.com/more-cars/frontend",
  "scripts": {
    "start": "node src/server.ts",
    "local:app:start": "node --watch --env-file=.env src/server.ts & npx @tailwindcss/cli -i src/views/stylesheets/main.css -o ./public/stylesheets/main.css --watch",
    "css:build": "npx @tailwindcss/cli -i src/views/stylesheets/main.css -o ./public/stylesheets/main.css --minify",
    "docker:build-image": "docker build -t mc-frontend -f deployment/Dockerfile .",
    "docker:tag-image:dev": "docker image tag mc-frontend localhost/mc-frontend:dev",
    "docker:tag-image:dockerhub": "docker image tag mc-frontend docker.io/dennisgerike/more-cars-frontend:0.2.0",
    "docker:tag-image:github": "docker image tag mc-frontend ghcr.io/more-cars/frontend:0.2.0",
    "docker:login:dockerhub": "docker login docker.io",
    "docker:login:github": "docker login ghcr.io",
    "docker:push-image:dockerhub": "docker push docker.io/dennisgerike/more-cars-frontend:0.2.0",
    "docker:push-image:github": "docker push ghcr.io/more-cars/frontend:0.2.0",
    "minikube:install": "deployment/minikube-install.sh",
    "minikube:start": "deployment/minikube-cluster-start.sh",
    "minikube:open-tunnel": "deployment/minikube-tunnel-start.sh",
    "minikube:stop": "deployment/minikube-cluster-stop.sh",
    "minikube:delete": "deployment/minikube-cluster-delete.sh",
    "minikube:deploy:dev": "deployment/minikube-app-deploy.sh dev",
    "minikube:deploy:prod": "deployment/minikube-app-deploy.sh prod",
    "minikube:undeploy:dev": "deployment/minikube-app-undeploy.sh dev",
    "minikube:undeploy:prod": "deployment/minikube-app-undeploy.sh prod",
    "minikube:import-dev-image": "minikube image load localhost/mc-frontend:dev -p morecars",
    "minikube:delete-dev-image": "minikube image rm localhost/mc-frontend:dev -p morecars",
    "gke:deploy:prod": "deployment/gke-app-deploy.sh prod",
    "gke:undeploy:prod": "deployment/gke-app-undeploy.sh prod",
    "tests:lint": "npx eslint src",
    "tests:integration": "npx jest --projects tests/integration",
    "tests:a11y:gui": "npx playwright test --config tests/a11y --ui",
    "tests:a11y:cli": "npx playwright test --config tests/a11y",
    "tests:a11y:report": "npx playwright show-report test-reports/a11y/reports",
    "tests:behavior:gui": "npx playwright test --ui & nodemon -w ./specification/behavior -w ./tests/behavior/steps -e feature,ts --exec \"npx bddgen\"",
    "tests:behavior:cli": "npx bddgen && npx playwright test",
    "tests:performance": "K6_WEB_DASHBOARD=true K6_WEB_DASHBOARD_OPEN=true K6_WEB_DASHBOARD_EXPORT=test-reports/performance/report.html FRONTEND_URL=http://localhost:3001 k6 run tests/performance/get-car-model.ts"
  },
  "type": "module",
  "version": "0.2.0"
}
