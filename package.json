{
  "author": "Dennis Gerike",
  "dependencies": {
    "@tailwindcss/cli": "4.1.16",
    "@types/express": "5.0.5",
    "axios": "1.13.2",
    "express": "5.1.0",
    "gherkin-ast": "3.4.2",
    "gherkin-formatter": "1.2.2",
    "pug": "3.0.3",
    "tailwindcss": "4.1.16",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "description": "Frontend for the open car database 'More Cars'",
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@badeball/cypress-cucumber-preprocessor": "23.2.1",
    "@bahmutov/cypress-esbuild-preprocessor": "2.2.7",
    "@cucumber/cucumber": "12.2.0",
    "@eslint/js": "9.39.1",
    "@inquirer/prompts": "7.9.0",
    "@playwright/test": "1.56.1",
    "@types/k6": "1.3.1",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-v8": "3.2.4",
    "ajv": "8.17.1",
    "cypress": "15.6.0",
    "hygen": "6.2.11",
    "inflection": "3.0.2",
    "inquirer": "12.10.0",
    "nodemon": "3.1.10",
    "playwright-bdd": "8.4.1",
    "supertest": "7.1.4",
    "typescript-eslint": "8.46.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=24"
  },
  "license": "MIT",
  "name": "@more-cars/frontend",
  "repository": "https://github.com/more-cars/frontend",
  "scripts": {
    "start": "NODE_ENV=production node -r ts-node/register src/server.ts",
    "local:app:start": "node --watch --env-file=.env -r ts-node/register src/server.ts & npx @tailwindcss/cli -i src/views/stylesheets/main.css -o ./public/stylesheets/main.css --watch",
    "local:hosts:add": "sudo \"$(which node)\" -r ts-node/register add-to-hosts.ts",
    "css:build": "npx @tailwindcss/cli -i src/views/stylesheets/main.css -o ./public/stylesheets/main.css --minify",
    "app:deploy": "./deployment/deploy-app.sh",
    "app:undeploy": "./deployment/undeploy-app.sh",
    "docker:build-image": "docker build -t mc-frontend -f deployment/Dockerfile .",
    "docker:tag-image:dev": "docker image tag mc-frontend localhost/mc-frontend:dev",
    "docker:tag-image:dockerhub": "docker image tag mc-frontend docker.io/dennisgerike/more-cars-frontend:0.3.0",
    "docker:tag-image:github": "docker image tag mc-frontend ghcr.io/more-cars/frontend:0.3.0",
    "docker:login:dockerhub": "docker login docker.io",
    "docker:login:github": "docker login ghcr.io",
    "docker:push-image:dockerhub": "docker push docker.io/dennisgerike/more-cars-frontend:0.3.0",
    "docker:push-image:github": "docker push ghcr.io/more-cars/frontend:0.3.0",
    "minikube:install": "deployment/minikube-install.sh",
    "minikube:start": "deployment/minikube-cluster-start.sh",
    "minikube:open-tunnel": "deployment/minikube-tunnel-start.sh",
    "minikube:stop": "deployment/minikube-cluster-stop.sh",
    "minikube:delete": "deployment/minikube-cluster-delete.sh",
    "minikube:import-dev-image": "minikube image load localhost/mc-frontend:dev -p morecars",
    "minikube:delete-dev-image": "minikube image rm localhost/mc-frontend:dev -p morecars",
    "generate-tickets": "node --env-file=.env -r ts-node/register ticket-generator/create-tickets.ts",
    "tests:lint": "npx eslint src",
    "tests:developer": "npx vitest run -c tests/developer/vite.config.ts",
    "tests:developer:coverage": "npx vitest run -c tests/developer/vite.config.ts --coverage",
    "tests:a11y:gui": "npx playwright test --config tests/a11y --ui",
    "tests:a11y:cli": "npx playwright test --config tests/a11y",
    "tests:a11y:report": "npx playwright show-report test-reports/a11y/reports",
    "tests:behavior:cy-gui": "npx cypress open",
    "tests:behavior:cy-cli": "npx cypress run",
    "tests:behavior:gui": "npx playwright test --ui & nodemon -w ./specification/behavior -w ./tests/behavior/steps -e feature,ts --exec \"npx bddgen\"",
    "tests:behavior:cli": "npx bddgen && npx playwright test",
    "tests:performance": "K6_WEB_DASHBOARD=true K6_WEB_DASHBOARD_OPEN=true K6_WEB_DASHBOARD_EXPORT=test-reports/performance/report.html FRONTEND_URL=http://localhost:4000 k6 run tests/performance/get-car-model.ts"
  },
  "version": "0.3.0"
}
