{
  "author": "Dennis Gerike",
  "dependencies": {
    "@tailwindcss/cli": "4.1.16",
    "@types/express": "5.0.5",
    "axios": "1.13.2",
    "express": "5.1.0",
    "gherkin-ast": "3.4.2",
    "gherkin-formatter": "1.2.2",
    "pug": "3.0.3",
    "tailwindcss": "4.1.16",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "description": "Frontend for the open car database 'More Cars'",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "23.2.1",
    "@bahmutov/cypress-esbuild-preprocessor": "2.2.7",
    "@cucumber/cucumber": "12.2.0",
    "@eslint/js": "9.39.1",
    "@inquirer/prompts": "7.9.0",
    "@types/k6": "1.3.1",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-v8": "3.2.4",
    "ajv": "8.17.1",
    "cypress": "15.6.0",
    "dotenv": "17.2.3",
    "inflection": "3.0.2",
    "nodemon": "3.1.10",
    "openapi-backend": "5.15.0",
    "sloc": "0.3.2",
    "supertest": "7.1.4",
    "typescript-eslint": "8.46.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=24"
  },
  "license": "MIT",
  "name": "@more-cars/frontend",
  "repository": "https://github.com/more-cars/frontend",
  "scripts": {
    "start": "NODE_ENV=production node -r ts-node/register src/server.ts",
    "local:app:start": "./deployment/local-app-start.sh",
    "local:mockserver:start": "./tests/behavior/local-mock-server-start.sh",
    "local:hostnames:add": "./deployment/add-local-hostnames.sh",
    "css:build": "npx @tailwindcss/cli -i src/views/stylesheets/main.css -o ./public/stylesheets/main.css --minify",
    "app:deploy": "./deployment/deploy-app.sh",
    "app:undeploy": "./deployment/undeploy-app.sh",
    "minikube:install": "deployment/minikube-install.sh",
    "minikube:start": "deployment/minikube-cluster-start.sh",
    "minikube:stop": "deployment/minikube-cluster-stop.sh",
    "minikube:delete": "deployment/minikube-cluster-delete.sh",
    "tests:lint": "npx eslint src",
    "tests:developer": "npx vitest run -c tests/developer/vite.config.ts",
    "tests:developer:coverage": "npx vitest run -c tests/developer/vite.config.ts --coverage",
    "tests:behavior:gui": "npx cypress open",
    "tests:behavior:cli": "tests/behavior/run-behavior-tests.sh",
    "tests:performance": "K6_WEB_DASHBOARD=true K6_WEB_DASHBOARD_OPEN=true K6_WEB_DASHBOARD_EXPORT=test-reports/performance/report.html FRONTEND_URL=http://localhost:4000 k6 run tests/performance/get-car-model.ts",
    "stats:lines-of-code:src": "sloc src/",
    "stats:lines-of-code:test": "sloc tests/"
  },
  "version": "0.3.0"
}
