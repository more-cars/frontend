{
  "author": "Dennis Gerike",
  "dependencies": {
    "@tailwindcss/cli": "4.1.8",
    "@types/express": "5.0.3",
    "axios": "1.9.0",
    "express": "5.1.0",
    "pug": "3.0.3",
    "tailwindcss": "4.1.8",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "description": "Frontend for the open car database 'More Cars'",
  "devDependencies": {
    "@axe-core/playwright": "4.10.2",
    "@cucumber/cucumber": "11.2.0",
    "@eslint/js": "9.26.0",
    "@playwright/test": "1.52.0",
    "@types/k6": "1.0.2",
    "playwright-bdd": "8.2.1",
    "typescript-eslint": "8.32.0"
  },
  "engines": {
    "node": ">=22"
  },
  "license": "MIT",
  "name": "@more-cars/rest-api",
  "repository": "https://github.com/more-cars/rest-api",
  "scripts": {
    "start": "npx ts-node src/server.ts",
    "local:app:start": "node --watch --env-file=.env -r ts-node/register src/server.ts",
    "local:css:build": "npx @tailwindcss/cli -i src/views/stylesheets/main.css -o ./public/stylesheets/main.css --watch",
    "tests:lint": "npx eslint src",
    "tests:e2e:gui": "npx playwright test --ui --project=e2e",
    "tests:e2e:cli": "npx playwright test --project=e2e",
    "tests:e2e:report": "npx playwright show-report tests/reports/html",
    "tests:behavior:gui": "npx bddgen && npx playwright test --ui --project=behavior",
    "tests:behavior:cli": "npx bddgen && npx playwright test --project=behavior",
    "tests:performance": "K6_WEB_DASHBOARD=true K6_WEB_DASHBOARD_OPEN=true K6_WEB_DASHBOARD_EXPORT=tests/reporsts/performance/report.html k6 run -e FRONTEND_URL=http://localhost:3001 tests/performance/get-all-brands.ts"
  },
  "version": "0.1.0"
}
